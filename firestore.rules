rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reviews can be read by anyone, and created by anyone.
    // In a real app, you'd want to restrict creation to authenticated users.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if true;
      // Allow updates and deletes only by the user who created them (requires auth)
      // allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
