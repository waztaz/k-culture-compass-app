{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "location": {
          "type": "object",
          "description": "The user's geographical location.",
          "properties": {
            "latitude": {
              "type": "number"
            },
            "longitude": {
              "type": "number"
            }
          }
        }
      },
      "required": [
        "displayName",
        "email"
      ]
    },
    "Review": {
      "title": "Review",
      "description": "A user review for a location.",
      "type": "object",
      "properties": {
        "locationId": {
          "type": "string",
          "description": "The ID of the location being reviewed."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who created the review."
        },
        "author": {
          "type": "string",
          "description": "The name of the user leaving the review."
        },
        "rating": {
          "type": "number",
          "description": "The rating from 1 to 5."
        },
        "text": {
          "type": "string",
          "description": "The content of the review."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the review was created."
        }
      },
      "required": [
        "locationId",
        "userId",
        "author",
        "rating",
        "text",
        "createdAt"
      ]
    },
    "UserPost": {
      "title": "User Post",
      "description": "A blog post created by a user.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who created the post."
        },
        "author": {
          "type": "string",
          "description": "The display name of the post's author."
        },
        "title": {
          "type": "string",
          "description": "The title of the post."
        },
        "content": {
          "type": "string",
          "description": "The main content of the post in Markdown or plain text."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the post was created."
        }
      },
      "required": [
        "userId",
        "author",
        "title",
        "content",
        "createdAt"
      ]
    },
    "Article": {
      "title": "Article",
      "description": "A curated content piece like news, trends, or location spotlights.",
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/entities/TranslatedContent"
        },
        "content": {
          "$ref": "#/entities/TranslatedContent"
        },
        "excerpt": {
          "$ref": "#/entities/TranslatedContent"
        },
        "category": {
          "type": "string",
          "enum": [
            "K-Pop News",
            "K-Beauty Trend",
            "Location Spotlight"
          ]
        },
        "locationId": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "image": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "hint": {
              "type": "string"
            }
          },
          "required": [
            "url",
            "hint"
          ]
        }
      },
      "required": [
        "title",
        "content",
        "excerpt",
        "category",
        "createdAt",
        "image"
      ]
    },
    "Comment": {
      "title": "Comment",
      "description": "A user comment on an article.",
      "type": "object",
      "properties": {
        "articleId": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "articleId",
        "userId",
        "author",
        "text",
        "createdAt"
      ]
    },
    "TranslatedContent": {
      "title": "Translated Content",
      "description": "Content translated into multiple languages.",
      "type": "object",
      "properties": {
        "en": {
          "type": "string"
        },
        "ch": {
          "type": "string"
        },
        "jp": {
          "type": "string"
        },
        "tw": {
          "type": "string"
        }
      },
      "required": [
        "en"
      ]
    }
  },
  "auth": {
    "providers": [
      "emailLink"
    ]
  },
  "firestore": {
    "/reviews/{reviewId}": {
      "schema": {
        "$ref": "#/entities/Review"
      },
      "description": "Collection of user reviews."
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "User profile information."
    },
    "/user-posts/{userPostId}": {
      "schema": {
        "$ref": "#/entities/UserPost"
      },
      "description": "Collection of user-generated blog posts."
    },
    "/articles/{articleId}": {
      "schema": {
        "$ref": "#/entities/Article"
      },
      "description": "Collection of curated articles."
    },
    "/articles/{articleId}/comments/{commentId}": {
      "schema": {
        "$ref": "#/entities/Comment"
      },
      "description": "Sub-collection of comments for a specific article."
    }
  }
}
