{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
            "type": "string",
            "format": "email",
            "description": "The user's email address."
        }
      },
      "required": ["displayName", "email"]
    },
    "Review": {
      "title": "Review",
      "description": "A user review for a location.",
      "type": "object",
      "properties": {
        "locationId": {
          "type": "string",
          "description": "The ID of the location being reviewed."
        },
        "userId": {
            "type": "string",
            "description": "The ID of the user who created the review."
        },
        "author": {
          "type": "string",
          "description": "The name of the user leaving the review."
        },
        "rating": {
          "type": "number",
          "description": "The rating from 1 to 5."
        },
        "text": {
          "type": "string",
          "description": "The content of the review."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the review was created."
        }
      },
      "required": ["locationId", "userId", "author", "rating", "text", "createdAt"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/reviews/{reviewId}": {
      "schema": { "$ref": "#/entities/Review" },
      "description": "Collection of user reviews."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "User profile information."
    }
  }
}
